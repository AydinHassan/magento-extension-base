{
    "name": "magento/base-module",
    "type": "magento-module",
    "description": "Magento Extension Base Module",
    "authors": [
        {
            "name": "Aydin Hassan",
            "email": "aydin@hotmail.co.uk"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "squizlabs/php_codesniffer": "~1.5",
        "magento/magento": "1.9",
        "codeception/aspect-mock": "~0.5"
    },
    "autoload-dev": {
        "classmap": ["app", "skin", "test", "vendor/magento/magento/app", "vendor/magento/magento/lib"]
    },
    "extra": {
        "map": [
            ["app/code/community/__VENDOR__/__NAMESPACE__", "app/code/community/__VENDOR__/__NAMESPACE__"],
            ["app/etc/modules/__VENDOR_____NAMESPACE__.xml", "app/etc/modules/__VENDOR____NAMESPACE__.xml"],
            ["app/design/frontend/base/default/layout/__VENDOR_LAYOUT__/*", "app/design/frontend/base/default/layout/__VENDOR_LAYOUT__/"],
            ["app/design/frontend/base/default/template/__VENDOR_TEMPLATE__/*", "app/design/frontend/base/default/template/__VENDOR_TEMPLATE__/"],
            ["skin/frontend/base/default/js/__VENDOR_JS__/__NAMESPACE_JS__/*", "skin/frontend/base/default/js/__VENDOR_JS__/__NAMESPACE_JS__/"]
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "magento/magento",
                "version": "1.9",
                "source": {
                    "url": "http://svn.magentocommerce.com/source",
                    "type": "svn",
                    "reference": "branches/1.9"
                },
                "classmap": ["app/code/local", "app/code/community", "app/code/core", "lib"]
            }
        }
    ]
}
